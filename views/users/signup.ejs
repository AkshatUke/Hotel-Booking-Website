<% layout("layouts/boilerplate") -%>

<form action="/signup" method="POST" class="needs-validation col-12 col-md-6 offset-0 offset-md-3 mt-3" novalidate>
    <h1 class="texts row">Sign Up on Wonderlust</h1>
    <div class="mb-3">
        <label for="username" class="form-label texts">Username</label>
        <input type="text" name="username" class="form-control" id="username" required>
        <div class="invalid-feedback">Enter Valid Username</div>
    </div>
    <div class="mb-3">
        <label for="email" class="form-label texts">Email</label>
        <input type="email" name="email" class="form-control" id="email" required>
    </div>
    <div class="mb-3">
        <label for="password" class="form-label texts">Password</label>
        <input type="password" name="password" class="form-control" id="password" required>
    </div>
    <button class="btn btn-success mt-2">Sign Up</button>
</form>